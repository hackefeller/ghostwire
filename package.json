{
  "name": "ghostwire",
  "version": "3.1.10",
  "description": "The Best AI Agent Harness - Batteries-Included OpenCode Plugin with Multi-Model Orchestration, Parallel Background Agents, and Crafted LSP/AST Tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "ghostwire": "./bin/ghostwire.js"
  },
  "files": [
    "dist",
    "bin",
    "postinstall.mjs"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema.json": "./dist/ghostwire.schema.json"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm --external @ast-grep/napi && tsc --emitDeclarationOnly && bun build src/cli/index.ts --outdir dist/cli --target bun --format esm --external @ast-grep/napi && bun run build:schema",
    "build:all": "bun run build && bun run build:binaries",
    "build:binaries": "bun run script/build-binaries.ts",
    "build:schema": "bun run script/build-schema.ts",
    "clean": "rm -rf dist",
    "postinstall": "node postinstall.mjs",
    "prepublishOnly": "bun run clean && bun run build",
    "check:topology": "bun run script/check-topology.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "keywords": [
    "opencode",
    "plugin",
    "seer-advisor",
    "archive-researcher",
    "agents",
    "ai",
    "llm"
  ],
  "author": "YeonGyu-Kim",
  "license": "SUL-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pontistudios/ghostwire.git"
  },
  "bugs": {
    "url": "https://github.com/pontistudios/ghostwire/issues"
  },
  "homepage": "https://github.com/pontistudios/ghostwire#readme",
  "dependencies": {
    "@ast-grep/cli": "^0.40.0",
    "@ast-grep/napi": "^0.40.0",
    "@clack/prompts": "^0.11.0",
    "@code-yeongyu/comment-checker": "^0.6.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@opencode-ai/plugin": "^1.1.19",
    "@opencode-ai/sdk": "^1.1.19",
    "citty": "^0.1.6",
    "commander": "^14.0.2",
    "detect-libc": "^2.0.0",
    "js-yaml": "^4.1.1",
    "jsonc-parser": "^3.3.1",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.2",
    "vscode-jsonrpc": "^8.2.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/picomatch": "^3.0.2",
    "bun-types": "latest",
    "typescript": "^5.7.3"
  },
  "optionalDependencies": {
    "ghostwire-darwin-arm64": "3.1.10",
    "ghostwire-darwin-x64": "3.1.10",
    "ghostwire-linux-arm64": "3.1.10",
    "ghostwire-linux-arm64-musl": "3.1.10",
    "ghostwire-linux-x64": "3.1.10",
    "ghostwire-linux-x64-musl": "3.1.10",
    "ghostwire-windows-x64": "3.1.10"
  },
  "trustedDependencies": [
    "@ast-grep/cli",
    "@ast-grep/napi",
    "@code-yeongyu/grid-comment-checker"
  ]
}
